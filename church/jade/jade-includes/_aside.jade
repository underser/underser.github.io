	// nav
	style.
		.num-post {
		font-size: 18px;
		cursor: pointer;
		width: 20px;
		height: 20px;
		border: 1px solid #b2b2b2;
		text-align: center;
		border-radius: 50%;
		line-height: 20px;
		}
		.num-post.active {
		transform: rotate(90deg);
		border-color: #000;
		}
		.sub-menu {
		visibility: hidden;
		height: 0;
		overflow: hidden;
		transition: all 0.5s;
		}
		.sub-menu.active {
		visibility: visible;
		height: auto;
		overflow: auto;
		transition: all 0.5s;
		}
	script.
		document.addEventListener("DOMContentLoaded", function() {
		var items = document.body.querySelectorAll(".num-post");
		[].forEach.call(items, function(item) {
		item.addEventListener("click", function() {
		this.classList.toggle("active");
		this.closest("li").querySelector(".sub-menu").classList.toggle("active");
		})
		})
		}, false)
